<div class="content">
    <h2> Author: $author.getName() </h2>

    <form action="/authors/$author.getId()/edit" method="get">
        <input type="submit" value="Edit" class="button">
    </form>

    #if( $author.getAllAuthorsArticles().size() == 0 )
        <form action="/authors/$author.getId()/delete" method="post">
            <input type="submit" value="delete" class="button">
        </form>
    #end
</div>